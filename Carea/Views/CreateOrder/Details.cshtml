@model CreateOrderVM

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<center>
	<h2>Details Order </h2>

</center>

		<form asp-action="Details" asp-controller="Cars" enctype="multipart/form-data">
	<div class="form-group">
		<label for="Name">Car Name</label>
		<input  disabled class="form-control" type="text" placeholder="Add Car Name Here .. " asp-for="Cars.Car_Name">
		<br />

	</div>
	<div class="form-group">
		<label for="Name">Car Model</label>
		<input  disabled class="form-control" type="text" placeholder="Add Car Model Here .. " asp-for="Cars.Car_Model">
		<br />

	</div>



	<div class="form-group">
		<label for="Name">Amount</label>
		<input  disabled class="form-control" type="text" placeholder="Add Price Here .. " asp-for="Amount">
		<br />

	</div>
	<div class="form-group">
		<label for="Name">Order User Fullname</label>
		<input  disabled class="form-control" type="text" placeholder="Add Price Here .. " asp-for="ApplicationUser.FullName">
		<br />

	</div>

	<div class="form-group">
		<label for="Name">Shipping Type</label>
		<input disabled class="form-control" type="text" placeholder="Add Price Here .. " asp-for="Shipping.Type">
		<br />

	</div>

	<div class="form-group">
		<label for="Name">TAX</label>
		<input disabled class="form-control" type="text" placeholder="Add Price Here .. " asp-for="TAX">
		<br />

	</div>
	<div class="form-group">
		<label for="Name">Address</label>
		<input disabled class="form-control" type="text" placeholder="Add Price Here .. " asp-for="Address">
		<br />

	</div>


	@if (Model.Status==1)
	{

		<div class="form-group">
		<label for="Name">Statues</label>
			<input disabled class="form-control" type="text"  value="Placed">
		<br />

	</div>

	}
	@if (Model.Status==2)
	{

		<div class="form-group">
		<label for="Name">Statues</label>
			<input disabled class="form-control" type="text" value="Processing">
		<br />

	</div>

	}
	@if (Model.Status==3)
	{

		<div class="form-group">
		<label for="Name">Statues</label>
			<input disabled class="form-control" type="text" value="Shipped">
		<br />

	</div>

	}	
	@if (Model.Status==4)
	{

		<div class="form-group">
		<label for="Name">Statues</label>
			<input disabled class="form-control" type="text" value="In Transit">
		<br />

	</div>

	}	
	@if (Model.Status==5)
	{

		<div class="form-group">
		<label for="Name">Statues</label>
			<input disabled class="form-control" type="text" value="Out for Delivery">
		<br />

	</div>

	}	
	@if (Model.Status==6)
	{

		<div class="form-group">
		<label for="Name">Statues</label>
			<input disabled class="form-control" type="text" value="Delivered">
		<br />

	</div>

	}
	@if (Model.Status==7)
	{

		<div class="form-group">
		<label for="Name">Statues</label>
			<input disabled class="form-control" type="text" value="Cancelled">
		<br />

	</div>

	}

	<br />
	<br />
	<div class="col-12">
		<a asp-controller="CreateOrder" asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary mr-1"><i class="feather icon-edit-1"></i> Edit Order</a>
		<button asp-controller="CreateOrder" asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-outline-danger"><i class="feather icon-trash-2"></i> Delete Order</button>
	</div>

				
</form>