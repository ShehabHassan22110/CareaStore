@model BrandVM

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<Center>
    <h1>Edit Brand</h1>
</Center>

<form asp-action="Edit" asp-controller="Brand" enctype="multipart/form-data">
	<center>
		<img src="~/Uploads/Brand/@Model.LogoUrl" class="mb-3" width="300" height="200" />

	</center>
	<br />
						<div class="form-group">
							<label for="Name">Brand Name</label>
							<input class="form-control" type="text"  asp-for="BrandName">
							<br />

						</div>
						<div class="form-group">
		<label for="Name">Phone</label>
		<input class="form-control" type="text"  asp-for="Phone">
							<br />

						</div>

	<div class="form-group">
		<label for="Photo">Choose Photo</label>
		<input type="file" class="form-control-file form-control height-auto" asp-for="Photo">
	</div>

	<div class="col-12">
		<input type="submit" value="Save Changes" class="btn btn-primary glow mb-1 mb-sm-0 mr-0 mr-sm-1" />
		<a asp-action="Delete" asp-controller="Brand" class="btn btn-danger btn-lg">Delete</a>
	</div>

				
</form>
