@model Car_Photo_ColorVM

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<Center>
    <h1>Details</h1>
</Center>


<form asp-action="Details" asp-controller="PhotoColor" enctype="multipart/form-data">
	<center>
		<img src="~/Uploads/Cars/@Model.imgUrl" class="mb-3" width="300" height="200" />

	</center>
	<br />
						<div class="form-group">
		<label for="Name">Color Code</label>
							<input class="form-control" type="text"  asp-for="Color_Code"readonly>
							<br />

						</div>
						<div class="form-group">
						<label for="Name">Car Name : @Model.Cars.Car_Name</label>
							<br />

						</div>


	<div class="col-12">
		<a asp-controller="PhotoColor" asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary mr-1"><i class="feather icon-edit-1"></i> Edit</a>
		<button asp-controller="PhotoColor" asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-outline-danger"><i class="feather icon-trash-2"></i> Delete</button>
	</div>

				
</form>
